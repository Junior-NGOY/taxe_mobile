{
  "expo": {
    "name": "SID Taxe Parking",
    "description": "Application de suivi des taxes avec prise en charge du template dynamic",
    "slug": "sid-taxe-parking",
    "version": "3.3.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sidtaxeparking",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "assets/fonts/**",
      "assets/images/**"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Cette application utilise la caméra pour scanner les codes QR des véhicules.",
        "NSMicrophoneUsageDescription": "Cette application peut utiliser le microphone pour des fonctionnalités audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.sid.taxeparking",
      "versionCode": 14,
      "permissions": [
        "CAMERA",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "minSdkVersion": 21,
      "targetSdkVersion": 22,
      "compileSdkVersion": 28
    },
    "web": {
      "favicon": "./assets/images/favicon.ico",
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera"
    ],
    "extra": {
      "eas": {
        "projectId": "d8231ebf-fcf4-4b91-83f0-9df7da27ce8b"
      }
    }
  }
}
